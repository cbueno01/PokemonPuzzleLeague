<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape >
            <solid android:color="@color/white"/>
            <stroke android:width="8dp" android:color="@color/light_blue_border"/>
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:startColor="@color/dark_blue_border"
                android:centerColor="#00b8860b"
                android:endColor="@color/dark_blue_border"
                android:angle="45"/>
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:startColor="@color/dark_blue_border"
                android:centerColor="#00b8860b"
                android:endColor="@color/dark_blue_border"
                android:angle="135"/>
        </shape>
    </item>

</layer-list>