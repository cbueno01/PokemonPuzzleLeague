<resources>
    <style name="MenuActivityTheme" parent="FullScreen">
        <item name="colorPrimary">@color/primary_dark</item>
        <item name="android:textColorPrimary">@color/primary_text_color</item>
        <item name="android:textColorSecondary">@color/primary_text_color</item>
        <item name="actionMenuTextColor">@color/primary_text_color</item>
        <item name="android:navigationBarColor">@color/primary_dark</item>
    </style>

    <style name="GameTheme" parent="FullScreen">
        <item name="android:windowBackground">@color/primary_dark</item>
        <item name="android:colorBackground">@color/primary_dark</item>
        <item name="android:alertDialogTheme">@style/AlertDialogTheme</item>
    </style>

    <style name="SettingsTheme" parent="FullScreen">
        <item name="android:navigationBarColor">@color/primary_dark</item>
        <item name="colorPrimary">@color/primary_dark</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@color/primary_light</item>
        <item name="android:colorAccent">@color/secondary_dark</item>

        <!-- switcher style -->
        <item name="colorControlActivated">@color/secondary_dark</item>
        <item name="android:colorForeground">#42221f1f</item>
    </style>

    <style name="FullScreen" parent="Theme.AppCompat">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.AppCompat.Dialog">
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/primary_text_color</item>
        <!-- Used for the title and text -->
        <item name="android:textStyle">bold</item>
        <item name="android:textColorPrimary">@color/primary_text_color</item>
        <item name="android:textColorSecondaryInverse">@color/primary_light</item>
        <!-- Used for the background -->
        <item name="android:background">@color/primary_dark</item>
    </style>

    <style name="SettingsDialogFragment" parent="Theme.AppCompat">
        <!-- Used for the title and text -->
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primary_text_color</item>
        <!-- Used for the background -->
        <item name="android:background">@color/primary_dark</item>
    </style>
</resources>

